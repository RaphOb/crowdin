{% extends 'base.html.twig' %}
{# templates/registration/register.html.twig #}
{% block title %}Edit'in!{% endblock %}
{% block stylesheets %}
<head>
    <style type="text/css">
    body{
        background-color :Gainsboro;
         
    }
    .container{
        background-color :white;
        margin-top: 100px;
        height: 550px;
        width: 500px;
        border : 2px solid;
        border-color: aqua;
        border-radius: 10px;
         box-shadow: 
        0 0 1px rgba(0, 0, 0, 0.3), 
        0 3px 7px rgba(0, 0, 0, 0.3), 
        inset 0 1px rgba(255,255,255,1),
        inset 0 -3px 2px rgba(0,0,0,0.25);
    }
    input{
        margin:10px;
        
    }
    button{
        float:right;
    }
    </style>
</head>
{% endblock %}
{% block body %}
<div class="container">
<h2 class="h2" style="text-align:center;"> Edit !</h2>
    {{ form_start(form_user_edit) }}
        {{ form_row(form_user_edit.username) }}
        {{ form_row(form_user_edit.Language) }}
        {{ form_row(form_user_edit.description) }}
        {{ form_row(form_user_edit.graphic) }}
        {{ form_row(form_user_edit.email) }}
        {{ form_widget(form_user_edit.plainPassword.setRendered()) }}
        

        <button type="submit">Edit!</button>
    {{ form_end(form_user_edit) }}
</div>
{% endblock %}